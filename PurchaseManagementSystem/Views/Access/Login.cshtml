@model PurchaseManagementSystem.Models.VMLogin;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Login</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1 style="text-align:center">Admin Login</h1>
        <div class="container">
        <input class="custom-field" type="email" placeholder="Email" asp-for="Email" />
        <input class="custom-field" type="password" placeholder="PassWord" asp-for="PassWord" />

        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me logged In.
        </label>
        <button class="custom-loginBtn" type="submit">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
        </div>
    </form>
</body>
</html>
